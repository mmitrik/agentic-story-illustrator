{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChapterScope",
  "type": "object",
  "required": ["chapter", "scenes"],
  "properties": {
    "chapter": {
      "type": "string",
      "description": "Chapter title or number"
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["scene_id", "summary", "importance"],
        "properties": {
          "scene_id": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "importance": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          }
        }
      }
    }
  }
}
